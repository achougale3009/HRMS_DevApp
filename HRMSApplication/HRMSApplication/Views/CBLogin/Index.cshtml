@model HRMSApplication.Models.CBUserModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            background-image: url('../../Content/img/BackgroupLoginImg.jpeg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        h1 {
            color: #000000;
            text-align: center;
            font-family: "SIMPSON";
        }
    </style>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container col-sm-4" style="float:none;">
            <form style="width: 300px;margin: 0 auto;">
                <div class="">
                    <h2 style="text-align:center;">Login</h2>
                    <div class="form-group">
                        <label for="UserName" class="control-label">User Name * </label>
                        <div>
                            <input type="text" name="UserName" placeholder="Enter User Name" class="form-control" required="required" maxlength="20" oninvalid="this.setCustomValidity('Enter User Name Here')" oninput="this.setCustomValidity('')" />
                            @*<span class="text-danger">Name Required</span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Password" class="control-label">Password * </label>
                        <div>
                            <input type="password" name="Password" class="form-control" required="required" placeholder="Enter Password" maxlength="20" oninvalid="this.setCustomValidity('Enter Password Here')" oninput="this.setCustomValidity('')" />
                            @*<span class="text-danger">Password Required</span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-block btn-primary">Login</button>
                    </div>
                    <div class="form-group error">
                        @if (@ViewBag.Failedcount != null)
                        {
                            <label class="text-danger"> Failed Attempt count is: @ViewBag.Failedcount</label>
                        }

                        @if (@ViewBag.NotValidUser != null)
                        {
                            <label class="text-danger"> @ViewBag.NotValidUser</label>
                        }
                    </div>
                </div>
            </form>
        </div>

    }


</body>
</html>